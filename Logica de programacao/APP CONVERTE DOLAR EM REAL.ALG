Algoritmo "App Converte Dolar em Real"

Var

   reais, dolar : real


Inicio
       escreval("APP Converte Dolar e Real")
       escreval("===============================")
       escreval("")

      escreva("Digite o valor em Dolar: $")
      leia(dolar)
      reais <- dolar * 4.87
      
      escreval("")
      escreval ("o valor em reais é: R$", reais)


Fimalgoritmo